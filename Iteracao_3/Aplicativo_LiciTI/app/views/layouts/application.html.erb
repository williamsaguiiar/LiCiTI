                  <li><%= current_user.email %></li> 
                  <div class="button">
                    <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
                  </div>
                
              <% end %>
              <div class="button" value="submit">
                <%= link_to 'Sobre', "/about" %>
                </div>
              </ul> 
      </div>
    </div>
  </div>

    <%= yield %>
